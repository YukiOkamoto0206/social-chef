<%- include("components/header.ejs") %>

  <!-- TITLE OF THE PAGE -->
  <title>Social Chef - Saved </title>

  <!-- FONT USED FOR THE PAGE (RETRIVED FROM GOOGLE FONTS) -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Heebo&family=Nunito:wght@200&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/20718ccc33.js" crossorigin="anonymous" defer></script>

  <!-- CSS UTILIZED BY THIS PAGE -->
  <link rel="stylesheet" href="/css/general.css" type="text/css" />

  <body>

    <div class="trim"></div>
    <nav>
      <section class="nav-header">
        <h1>Welcome <br>
          <%= firstN[0].firstName %>!
        </h1>
      </section>

      <section class="nav-body">
        <div class="body-row"> <i class="fa-sharp fa-solid fa-house"></i><a href="/home">Home</a> </div>
        <div class="body-row active "><i class="fa-solid fa-bookmark"></i><a href="">Saved</a></div>
        <div class="body-row"><i class="fa-solid fa-folder-plus"></i><a href="/newRecipe">Add Recipe</a></div>
        <div class="body-row"><i class="fa-solid fa-gear"></i><a href="/settings">Info</a></div>
      </section>

      <section class="nav-footer">
        <div class="body-row"><i class="fa-solid fa-right-from-bracket"></i><a href="/logout">Logout</a></div>
      </section>

    </nav>

    <main>
      <section class="input-container">
        <h1>Saved Recipes</h1>
      </section>

      <% if(typeof(recipes) !="undefined" ) { %>
        <% if (recipes.length> 10) { %>
          <% for (i=0; i < 5; i++) { %>
            <div class="slip">
              <div class="slip-img">
                <img src="<%= recipes[i].image_link %>" alt="" srcset="">
              </div>
              <div class="slip-body">
                <p id="<%=i%>-name">Name: <%= recipes[i].recipe_name %>
                </p>
                <p>Calories: <%= parseFloat(recipes[i].calories).toFixed(2) %>
                </p>
                <p>Servings: <%= recipes[i].serving_size %>
                </p>
                <p>Time: <%= recipes[i].meal_time %>
                </p>
                <p>Cuisine: <%= recipes[i].cuisine %>
                </p>
              </div>
              <div class="slip-util">
                <a href="<%= recipes[i].image_link %>" target="_blank"><button class="info-button">Info</button></a>
                <button id="<%=i%> %>" class="save-button"
                  onclick="UnsaveRecipeToAccount(this.id, `<%= recipes[i].recipe_name %>`)">Unsave</button>
              </div>
            </div>
            <% } %>
              <% } else { %>
                <% for (i=0; i < recipes.length; i++) { %>
                  <div class="slip">
                    <div class="slip-img">
                      <img src="<%= recipes[i].image_link %>" alt="" srcset="">
                    </div>
                    <div class="slip-body">
                      <p>Name : <%= recipes[i].recipe_name %>
                      </p>
                      <p>Calories : <%= parseFloat(recipes[i].calories).toFixed(2) %>
                      </p>
                      <p>Servings : <%= recipes[i].serving_size %>
                      </p>
                      <p>Time : <%= recipes[i].meal_time %>
                      </p>
                      <p>Cuisine : <%= recipes[i].cuisine %>
                      </p>
                    </div>
                    <div class="slip-util">
                      <a href="<%= recipes[i].image_link %>" target="_blank"><button
                          class="info-button">Info</button></a>
                      <button id="<%=i%>" class="save-button"
                        onclick="UnsaveRecipeToAccount(this.id, `<%= recipes[i].recipe_name %>`)">Unsave</button>
                    </div>
                  </div>
                  <% } %>
                    <% } %>
                      <% } %>

                        <div id="form-box1">

                        </div>

    </main>
  </body>

  </html>
